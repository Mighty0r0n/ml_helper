{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s: %(message)s"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.FileHandler",
            "mode": "a",
            "filename": "log.txt",
            "formatter": "simple",
            "level": "INFO"
        }
    },
    "loggers": {
        "root": {
            "handlers": ["stdout"],
            "level": "INFO"
        }
    }
}