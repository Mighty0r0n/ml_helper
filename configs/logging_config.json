{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(levelname)s: %(message)s"
    },
    "simple_time": {
      "format": "%(levelname)s - %(asctime)s: %(message)s"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "level": "INFO",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "mode": "a",
      "filename": "log.txt",
      "formatter": "simple",
      "level": "DEBUG",
      "delay": "true"
    },
    "metrics": {
      "class": "logging.FileHandler",
      "mode": "a",
      "filename": "metrics_collection.txt",
      "formatter": "simple_time",
      "filters": [
        "get_metrics"
      ],
      "level": "INFO"
    }
  },
  "filters": {
    "get_metrics": {
      "()": "logging_helper.StartsWithFilter",
      "prefix": "Regression metrics:"
    }
  },
  "loggers": {
    "root": {
      "handlers": [
        "stdout",
        "file",
        "metrics"
      ],
      "level": "INFO"
    }
  }
}